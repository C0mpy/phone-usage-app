<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/surveyPickActivityLayout"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/design_default_color_primary_dark"
              android:orientation="vertical"
              tools:context="com.example.SurveyPickActivity">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="3dp"
            android:gravity="center"
            android:textColor="@android:color/background_light"
            android:textSize="25dp"
            android:text="This is where you write responses to the questions"/>

    <ScrollView
            android:id="@+id/survey_pick_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:id="@+id/survey_pick_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical"/>
    </ScrollView>

</LinearLayout>